export async function  getStaticPaths (){
    const blogs = await Astro.glob("../../news/*.md")
    return blogs.map(blog => ({
        params : {
            slug :blog.frontmatter.slug
        } ,
        props:{
            blog
        }
    }))
}
let blogs = await Astro.glob("../../news/*.md")
const {Content, frontmatter } = Astro.props.blog
function checkRelated(blog) {
  let tmp = false ;
  frontmatter.tags.forEach(tag => {
    if( blog.frontmatter.tags.includes(tag) ) tmp = true 
  });

  return tmp && blog.frontmatter.id !=  frontmatter.id;
}
blogs = blogs.filter(checkRelated);


